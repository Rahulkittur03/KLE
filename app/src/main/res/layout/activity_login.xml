<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient_0"
    tools:context=".login_activity">
    <LinearLayout
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xyzlogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/figmaregular"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/authentication_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/rounded_corner_edittext"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:elevation="4dp"
            android:fontFamily="@font/figmaregular"
            android:paddingStart="20dp"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="10dp"
            android:background="@drawable/rounded_corner_edittext"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:elevation="4dp"
            android:inputType="textPassword"
            android:fontFamily="@font/figmaregular"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Passoword"
            android:fontFamily="@font/figmaregular"
            android:textColor="@color/gray"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/figmaregular"
            android:text="Login"
            android:textColor="@color/black"
            android:backgroundTint="@color/off_white"
            android:layout_marginTop="40dp"
            />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:indeterminateTint="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont Have Account?"
                android:fontFamily="@font/font_01"
                android:textColor="@color/gray"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/register_Connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Create Accout"
                android:textStyle="bold"
                android:fontFamily="@font/font_01"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp"
            />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>