<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/off_white"
    android:layout_marginVertical="10dp"
    android:background="@drawable/rounded_corner_edittext"
    android:padding="12dp">

    <TextView
        android:id="@+id/recycler_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Name"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/recycler_OPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:text="OPT_Number"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/recycler_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="Problem"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="2"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/recycler_timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_OPD"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="clock"
        android:textSize="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>