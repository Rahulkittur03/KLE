<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/gradient_0"
    tools:context=".UserDetails">
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/btn_back" />

    <TextView
        android:id="@+id/text_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/button_home"
        android:layout_toRightOf="@id/button_back"
        android:fontFamily="@font/font_01"
        android:gravity="center"
        android:text="Patients Schedule"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/button_home"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/btn_home" />
    <LinearLayout
        android:id="@+id/main_content_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/button_home"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/text_view_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:fontFamily="@font/font_01"
            android:layout_marginTop="16dp"
            tools:text="Name"/>
        <TextView
            android:id="@+id/text_view_OPDNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:fontFamily="@font/font_01"
            android:layout_marginTop="16dp"
            tools:text="OPD number"/>
        <TextView
            android:id="@+id/text_view_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:fontFamily="@font/font_01"
            android:layout_marginTop="16dp"
            tools:text="Problem"/>
        <TextView
            android:id="@+id/text_view_IPD_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/font_01"
            android:layout_marginTop="16dp"
            tools:text="IDP number"/>
        <EditText
            android:id="@+id/EditText_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:hint="Description"
            android:elevation="2dp"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:minLines="3"
            android:background="@drawable/rounded_corner_edittext"/>
        <EditText
            android:id="@+id/editText_Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="DAY - "
            android:elevation="2dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_edittext"/>

        <TextView
            android:id="@+id/editText_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:hint="Select Time "
            android:fontFamily="@font/figmaregular"
            android:elevation="2dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_edittext"/>
        <TextView
            android:id="@+id/editText_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/figmaregular"
            android:hint="Select Date"
            android:elevation="2dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_edittext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/main_content_schedule"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/schedule_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textColor="@color/black"
            android:background="@drawable/rectange_corner_btn"
            android:fontFamily="@font/font_01"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
</RelativeLayout>